          <name>quay.io/rohankanojia/helloapp:${project.version}</name>
          <build>
            <from>openjdk:8-jdk</from>
	    <cmd>java -jar maven/${project.artifactId}-${project.version}.jar</cmd>
          </build>
        </image>
      </images>
    </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>build</goal>
                            <goal>resource</goal>
                            <goal>apply</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>