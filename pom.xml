        <wsdl.url>http://www.dneonline.com/calculator.asmx?wsdl</wsdl.url>

        <version.jaxb2-basics>0.12.0</version.jaxb2-basics>
        <version.jaxws-maven-plugin>2.3.1-b20150201.1248</version.jaxws-maven-plugin>

