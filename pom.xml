    <build>
        <plugins>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxws-maven-plugin</artifactId>
                <version>2.4.1</version>
                <configuration>
                    <vmArgs>
                        <vmArg>-Djavax.xml.accessExternalSchema=all</vmArg>
                    </vmArgs>
                </configuration>
            </plugin>
        <plugin>
            <groupId>org.jvnet.jax-ws-commons</groupId>
            <artifactId>jaxws-maven-plugin</artifactId>
            <version>${version.jaxws-maven-plugin}</version>
            <dependencies>
                <dependency>
                    <groupId>org.jvnet.jaxb2_commons</groupId>
                    <artifactId>jaxb2-basics</artifactId>
                    <version>${version.jaxb2-basics}</version>
                </dependency>
            </dependencies>
            <configuration>
                <implDestDir>target/generated-sources</implDestDir>
                <sourceDestDir>target/generated-sources</sourceDestDir>
                <extension>true</extension>
                <protocol>Xsoap1.1</protocol>
                <target>2.0</target>
                <xjcArgs>
                    <xjcArg>-target</xjcArg>
                    <xjcArg>2.0</xjcArg>
                    <xjcArg>-XtoString</xjcArg>
                    <xjcArg>-Xequals</xjcArg>
                    <xjcArg>-XhashCode</xjcArg>
                    <xjcArg>-XautoNameResolution</xjcArg>
                </xjcArgs>
                <vmArgs>
                    <vmArg>-Djavax.xml.accessExternalSchema=all</vmArg>
                </vmArgs>
            </configuration>
            <executions>
                <execution>
                    <id>calculator</id>
                    <phase>generate-sources</phase>
                    <goals>
                        <goal>wsimport</goal>
                    </goals>
                    <configuration>
                        <wsdlUrls>
                            <wsdlUrl>${wsdl.url}</wsdlUrl>
                        </wsdlUrls>

                    </configuration>
                </execution>

            </executions>
            </plugin>

            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${parent.version}</version>
            </plugin>
